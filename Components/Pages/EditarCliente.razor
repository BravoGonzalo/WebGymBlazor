@page "/editar-cliente/{ClienteId:int}/{dniEntrenador}"
@layout Layout.EmptyLayout
@rendermode InteractiveServer
@using ProyectoGym.Domain
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation
@inject ProyectoGym.Business.ClienteService ClienteService
@using ProyectoGym.Business 

<h3>Editar Cliente</h3>

@if (cliente == null)
{
    <div class="alert alert-warning">No se encontró el cliente.</div>
}
else
{
    <div class="card p-4 shadow-sm" style="max-width: 600px;">
        <EditForm Model="@editModel" OnValidSubmit="GuardarCambios">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label>Nombre</label>
                <InputText @bind-Value="cliente.nombre" class="form-control" />
            </div>
            <div class="mb-3">
                <label>Apellido</label>
                <InputText @bind-Value="cliente.apellido" class="form-control" />
            </div>
            <hr />
            <h5 class="text-muted">Restablecer Contraseña</h5>
            <p><small>Deje estos campos en blanco para no cambiar la contraseña actual.</small></p>

            <div class="mb-3">
                <label>Nueva Contraseña</label>
                <InputText @bind-Value="editModel.NuevaContraseña" type="password" class="form-control" />
                <ValidationMessage For="() => editModel.NuevaContraseña" class="text-danger" />
            </div>
            <div class="mb-3">
                <label>Confirmar Nueva Contraseña</label>
                <InputText @bind-Value="editModel.ConfirmarContraseña" type="password" class="form-control" />
                <ValidationMessage For="() => editModel.ConfirmarContraseña" class="text-danger" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-secondary" @onclick="Volver">Cancelar</button>
            </div>
        </EditForm>
    </div>
}

@code {
    [Parameter] public int ClienteId { get; set; }
    [Parameter] public string dniEntrenador { get; set; } = string.Empty;

    private Cliente? cliente; 
    private EditModel editModel = new(); 
    private string errorMessage = string.Empty;

    public class EditModel
    {
        public string NuevaContraseña { get; set; } = string.Empty;

        [Compare(nameof(NuevaContraseña), ErrorMessage = "Las contraseñas no coinciden")]
        public string ConfirmarContraseña { get; set; } = string.Empty;
    }

    protected override void OnParametersSet()
    {
        cliente = ClienteService.GetById(ClienteId);
    }

    private void GuardarCambios()
    {
        if (cliente == null)
        {
            errorMessage = "No se puede guardar un cliente que no existe.";
            return;
        }

        try
        {
            if (!string.IsNullOrWhiteSpace(editModel.NuevaContraseña))
            {
                cliente.contraseña = ContraseñaHasher.HashPassword(editModel.NuevaContraseña);
            }
            ClienteService.ModificarCliente(cliente);

            Navigation.NavigateTo($"/dashboard-entrenador/{dniEntrenador}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar cambios: {ex.Message}";
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo($"/dashboard-entrenador/{dniEntrenador}");
    }
}